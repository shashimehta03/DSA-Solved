#include <bits/stdc++.h>
using namespace std;
class Node {
public:
    int data;
    Node* next;
    Node(int data1, Node* next1) {
        data = data1;
        next = next1;
    }

    Node(int data1) {
        data = data1;
        next = nullptr;
    }
};
void printLL(Node* head) {
    while (head != NULL) {
        cout << head->data << " ";
        head = head->next;
    }
}
Node* insertAtK(Node* head, int x, int val) {
     if(head==NULL){
        return NULL;
    }
    if(head->data==val){
        return new Node(x,head);
    }
    Node *temp=head;
    while(temp!=NULL){
        if(temp->next->data==val){
            Node *n=new Node(x);
            n->next=temp->next;
            temp->next=n;
            break;
        }
        temp=temp->next;
    }
    return head;
}

int main() {
    vector<int> arr = {0, 1, 2};
    int el = 5;
    int val = 2;
    Node* head = new Node(arr[0]);
    head->next = new Node(arr[1]);
    head->next->next = new Node(arr[2]);
    head = insertAtK(head, el, val);
    printLL(head);

    return 0;
}
